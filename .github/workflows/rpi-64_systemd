name: Buildroot RPI_SYSTEMD

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2

    - name: Change file mode
      run: chmod +x buildroot/rpi_64_systemd/rpi-64_systemd.sh

    - name: Run the script
      run: ./buildroot/rpi_64_systemd/rpi-64_systemd.sh
      
    - name: Upload artifact
      uses: actions/upload-artifact@v1
      with:
        name: sdimg
        path: linux-build/buildroot-2020.02.3/output/images/sdcard.img
